<header class="header">
  <nav class="navbar" id="topbar">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://www.unifly.aero"><img src="{{uiRootPath}}/img/logo.png" alt="Unifly"></a>
        <button class="navbar-burger" data-target="topbar-menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
      <div id="topbar-menu" class="navbar-menu">
        <div class="navbar-start">
          <div class="navbar-item has-dropdown">
            <a class="navbar-link" href="{{or site.url (or siteRootUrl siteRootPath)}}">Docs</a>
            <div class="navbar-dropdown explore">
              <div class="title">Unifly Documentation Overview</div>
              <div class="cols">
                <ul>
                  <li class="heading"><a href="{{relativize site.components.get-started-guide.url}}">Guides</a></li>
                  <li><a href="{{siteRootPath}}/analytics-guide/{{site.components.analytics-guide.latest.version}}/index.html">Analytics Guide</a></li>
                  <li><a href="{{siteRootPath}}/install-guide/{{site.components.install-guide.latest.version}}/index.html">Install Guide</a></li>
                  <li><a href="{{siteRootPath}}/user-guide/{{site.components.user-guide.latest.version}}/index.html">User Guide</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="navbar-item has-dropdown">
            <a class="navbar-link component" href="{{relativize page.componentVersion.url}}"><span class="title">{{{page.component.title}}}</span> <span class="version">{{page.componentVersion.displayVersion}}</span></a>
            <div class="navbar-dropdown versions">
              <div class="cols">
                <ul>
                  {{#each page.versions}}
                    <li{{#if (eq ./version @root.page.version)}} class="current"{{/if}}><a class="navbar-item" href="{{relativize ./url}}">{{{@root.page.component.title}}} {{./displayVersion}}</a></li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
          {{#if env.ALGOLIA_API_KEY}}
            <form class="navbar-item search">
              <input type="text" placeholder="Search Unifly Docs" class="query" id="search-query">
              <button type="button" class="search"><span>Search</span></button>
            </form>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
</header>
